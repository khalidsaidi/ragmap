{
  "name": "@ragmap/api",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @ragmap/shared run build && tsx watch src/index.ts",
    "build": "pnpm --filter @ragmap/shared run build && tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "echo 'lint not configured'",
    "typecheck": "pnpm --filter @ragmap/shared run build && tsc -p tsconfig.json --noEmit",
    "test": "pnpm --filter @ragmap/shared run build && node --test --import tsx tests/*.test.ts"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.5",
    "@google-cloud/firestore": "^7.11.1",
    "dotenv": "^17.2.4",
    "fastify": "^5.7.4",
    "zod": "^3.23.8",
    "@ragmap/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0"
  }
}
