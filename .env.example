# Shared
PUBLIC_BASE_URL=http://localhost:3000
SERVICE_VERSION=0.1.0
LOG_LEVEL=info
LOG_NOISE=false

# Storage
# Primary datastore is Firestore in production. For local dev/tests, use `inmemory`.
RAGMAP_STORAGE=inmemory
GCP_PROJECT_ID=

# Cache
# In-memory TTL cache (ms) for Firestore-backed listing/search. Set 0 to disable.
CACHE_TTL_MS=60000

# Admin dashboard (HTTP Basic Auth for /admin/*)
# Recommended: store as Secret Manager secrets and inject into Cloud Run.
ADMIN_DASH_USER=
ADMIN_DASH_PASS=

# Ingest
REGISTRY_BASE_URL=https://registry.modelcontextprotocol.io
INGEST_TOKEN=change-me
INGEST_PAGE_LIMIT=100

# Agent payload capture (optional; powers /admin/agent-events)
CAPTURE_AGENT_PAYLOADS=false
AGENT_PAYLOAD_TTL_HOURS=24
AGENT_PAYLOAD_MAX_EVENTS=1000
AGENT_PAYLOAD_MAX_BYTES=16384
AGENT_EVENT_TOKEN=change-me

# Embeddings: set OPENAI_API_KEY to enable semantic search (ingest + query).
# When OPENAI_API_KEY is set, EMBEDDINGS_ENABLED defaults to true unless set to false.
EMBEDDINGS_ENABLED=
OPENAI_API_KEY=
OPENAI_EMBEDDINGS_MODEL=text-embedding-3-small

# API
PORT=3000

# MCP remote
MCP_PORT=4000
API_BASE_URL=http://localhost:3000
MCP_ALLOWED_ORIGINS=http://localhost:3000
