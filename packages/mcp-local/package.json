{
  "name": "@khalidsaidi/ragmap-mcp",
  "version": "0.1.4",
  "description": "Find and filter RAG-capable MCP servers by meaning or keywords. Local stdio MCP bridge to the RAGMap subregistry (semantic search, filters, explainable scores).",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "mcp-server",
    "agent-tools",
    "agents",
    "claude",
    "claude-desktop",
    "cursor",
    "rag",
    "retrieval",
    "search",
    "registry",
    "subregistry",
    "json-rpc",
    "stdio",
    "semantic-search",
    "mcp-registry",
    "discovery"
  ],
  "license": "MIT",
  "homepage": "https://ragmap-api.web.app/docs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/khalidsaidi/ragmap.git",
    "directory": "packages/mcp-local"
  },
  "bugs": {
    "url": "https://github.com/khalidsaidi/ragmap/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "private": false,
  "mcpName": "io.github.khalidsaidi/ragmap",
  "bin": {
    "ragmap-mcp": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "server.json"
  ],
  "scripts": {
    "dev": "tsx src/cli.ts",
    "quick-test": "tsx scripts/quick-test.ts",
    "build": "tsc -p tsconfig.json",
    "postbuild": "node -e \"const fs=require('fs');const p='dist/cli.js';const c=fs.readFileSync(p,'utf8');if(!c.startsWith('#!')){fs.writeFileSync(p,'#!/usr/bin/env node\\\\n'+c);}\"",
    "prepublishOnly": "pnpm build",
    "lint": "echo 'lint not configured'",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "echo 'no tests'"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "dotenv": "^17.2.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0"
  }
}
